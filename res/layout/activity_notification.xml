<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:background="@color/carditem"
    android:gravity="center" >

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tablelayout2"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_action_next_item"
        android:gravity="center"
        android:text="Step 1: Take Photos"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/optionNotification2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Current Location"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/tablelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below = "@id/optionNotification2"
        android:layout_marginTop="5dp"
        android:background="@color/carditem" >

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/Latitude"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.5"
                android:text="Latitude:"
                android:textSize="14sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/Lat"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Fetching.."
                android:textSize="14sp" >
            </TextView>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray" />

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/Longitude"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.5"
                android:text="Longitude:"
                android:textSize="14sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/Long"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Fetching.."
                android:textSize="14sp" >
            </TextView>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray" />
    </TableLayout>

    <TextView
        android:id="@+id/optionNotification1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tablelayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Notification"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableLayout
        android:id = "@+id/tablelayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/optionNotification1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/carditem" >

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/Step1"
                android:layout_gravity="right"
                android:layout_weight="0.75"
                android:text="Step 1:"
                android:textSize="14sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/Step1Text"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="place holder for step 1"
                android:textSize="14sp" >
            </TextView>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray" />

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/Step2"
                android:layout_gravity="right"
                android:layout_weight="0.75"
                android:text="Step 2:"
                android:textSize="14sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/Step2Text"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="place holder for step 2"
                android:textSize="14sp" >
            </TextView>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray" />

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/Step3"
                android:layout_gravity="right"
                android:layout_weight="0.75"
                android:text="Step 3:"
                android:textSize="14sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/Step3Text"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="place holder for step 3"
                android:textSize="14sp" >
            </TextView>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray" />

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/Step4"
                android:layout_gravity="right"
                android:layout_weight="0.75"
                android:text="Step 4:"
                android:textSize="14sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/Step4Text"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="place holder for step 4"
                android:textSize="14sp" >
            </TextView>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray" />

        <TableRow
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/Step5"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.75"
                android:text="Step 5:"
                android:textSize="14sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/Step5Text"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="place holder for step 5"
                android:textSize="14sp" >
            </TextView>
        </TableRow>

        <View
            android:id="@+id/finalLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray" />
    </TableLayout>

</RelativeLayout>